@model ResetPasswordViewModel

@{
    ViewData["Title"] = "إعادة تعيين كلمة المرور";
}
<div class="d-flex flex-column min-vh-100">
    <div class="flex-grow-1">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="shadow p-4" style="border-radius: 15px;">
                        <h2 class="text-center text-success fw-bold mb-4">اعادة تعيين كلمة المرور</h2>
                        <form asp-action="ResetPassword" method="post">
                            <input type="hidden" asp-for="Token" />
                            <div class="form-group mb-4">
                                <label asp-for="Password" class="form-label">كلمة المرور الجديدة</label>
                                <input asp-for="Password" class="form-control p-2" style="border-radius: 10px;" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-4">
                                <label asp-for="ConfirmPassword" class="form-label">تأكيد كلمة المرور الجديدة</label>
                                <input asp-for="ConfirmPassword" class="form-control p-2" style="border-radius: 10px;" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-success btn-lg" style="width: 100%; border-radius: 10px;">
                                    <i class="fas fa-redo-alt me-2"></i> إعادة تعيين كلمة المرور
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
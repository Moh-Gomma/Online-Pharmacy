@{
    ViewData["Title"] = "نسيت كلمة المرور؟";
}


<div class="d-flex flex-column min-vh-100">
    <div class="flex-grow-1">
        <section class="container d-flex justify-content-center mt-5">
            <div class="col-md-6 px-4">
                <div class="p-5" style="border-radius: 15px;">
                    <div class="text-center mt-3">
                        <h3 class="text-second mb-4" style="color: #075830; font-weight: 700;">نسيت كلمة المرور؟</h3>
                        <p class="text-muted mb-4">أدخل بريدك الإلكتروني وسنرسل لك رابطًا لإعادة تعيين كلمة المرور</p>
                    </div>

                    <form class="form-floating" asp-action="ForgotPassword" asp-controller="Home" method="post">
                        <div class="row mt-3">
                            <div class="col">
                                <div class="form-floating mb-4">
                                    <input type="email" class="form-control" id="email" name="email" placeholder="البريد الإلكتروني" required style="border-radius: 10px;">
                                    <label for="email">البريد الإلكتروني</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-3 text-center my-4">
                            <button class="btn btn-success rounded-pill custom-button btn-lg" type="submit" style="transition: background-color 0.3s;">
                                إرسال رابط إعادة تعيين كلمة المرور
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>